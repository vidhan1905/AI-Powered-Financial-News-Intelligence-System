# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database Configuration
# PostgreSQL connection string format: postgresql+asyncpg://user:password@host:port/database
# Example: postgresql+asyncpg://postgres:postgres@localhost:5432/financial_news
SQL_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/financial_news
VECTOR_DB_PATH=./data/chroma_db

# Application Configuration
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Similarity Thresholds
DEDUPLICATION_THRESHOLD=0.90
QUERY_SIMILARITY_THRESHOLD=0.75

# Confidence Scores
DIRECT_MENTION_CONFIDENCE=1.0
SECTOR_IMPACT_CONFIDENCE_MIN=0.6
SECTOR_IMPACT_CONFIDENCE_MAX=0.8
REGULATORY_IMPACT_CONFIDENCE_MIN=0.5
REGULATORY_IMPACT_CONFIDENCE_MAX=0.9
